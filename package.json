{
  "name": "xcloud-bot",
  "version": "1.0.0",
  "description": "ðŸ¤– xCloud Bot - Automated CI/CD workflows and GitHub App for xCloud Platform",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "build": "npm run build:clean && npm run build:copy",
    "build:clean": "rm -rf dist/",
    "build:copy": "mkdir -p dist && cp -r src/* dist/",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "eslint src/ --ext .js,.ts --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --config vitest.unit.config.js",
    "test:integration": "vitest run --config vitest.integration.config.js",
    "test:e2e": "playwright test",
    "validate": "npm run lint && npm run format:check && npm run test",
    "bot:start": "node src/bot/github-app.js",
    "bot:dev": "node --watch src/bot/github-app.js",
    "mcp:start": "python src/mcp/server.py",
    "scheduler:run": "node src/bot/scheduler.js",
    "analyze:repo": "node src/workflows/analyzer.js",
    "analyze:all": "node src/workflows/analyzer.js --all",
    "create:workflow": "node src/workflows/creator.js",
    "create:issue": "node src/bot/github-app.js --create-issue",
    "webhook:test": "node tests/webhook-test.js",
    "db:setup:test": "echo 'Test database setup placeholder'"
  },
  "keywords": [
    "github-app",
    "ci-cd",
    "automation",
    "xcloud",
    "workflows",
    "bot"
  ],
  "author": "xCloud Platform",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "@octokit/webhooks": "^12.0.10",
    "express": "^4.18.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.1.0",
    "vitest": "^0.34.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PageCloudv1/xcloud-bot.git"
  },
  "bugs": {
    "url": "https://github.com/PageCloudv1/xcloud-bot/issues"
  },
  "homepage": "https://github.com/PageCloudv1/xcloud-bot#readme"
}