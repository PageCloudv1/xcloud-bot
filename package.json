{
  "name": "xcloud-bot",
  "version": "1.0.0",
  "description": "ðŸ¤– Bot inteligente para automaÃ§Ã£o e assistÃªncia em repositÃ³rios GitHub - Assistant para orquestraÃ§Ã£o e gerenciamento da plataforma xCloud",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "start:app": "node src/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:app": "nodemon src/app.js",
    "build": "tsc",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:performance": "echo 'Performance tests would run here'",
    "lint": "eslint src/ --ext .ts,.js",
    "lint:fix": "eslint src/ --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "validate": "npm run lint && npm run format:check && npm run build",
    "docs:build": "typedoc src/",
    "db:setup:test": "echo 'Test database setup placeholder'",
    "bot:start": "node src/bot/github-app.js",
    "bot:dev": "nodemon src/bot/github-app.js",
    "mcp:start": "python3 src/mcp/server.py",
    "scheduler:run": "node src/bot/scheduler.js",
    "analyze:repo": "node src/workflows/analyzer.js",
    "analyze:all": "node src/workflows/analyzer.js --all",
    "create:workflow": "node src/workflows/creator.js",
    "create:issue": "node src/bot/github-app.js --create-issue",
    "webhook:test": "node tests/webhook-test.js",
    "deploy:production": "gh workflow run cd.yml -f environment=production",
    "deploy:staging": "gh workflow run cd.yml -f environment=staging",
    "setup:remote": "cd scripts && npm install && node setup-remote.js",
    "setup:ssl": "cd scripts && npm install && node setup-ssl.js",
    "setup:ssl-simple": "cd scripts && npm install && node setup-ssl-simple.js",
    "deploy:remote": "cd scripts && npm install && node deploy-remote.js",
    "quick:deploy": "cd scripts && npm install && node quick-deploy.js",
    "server:status": "pm2 status",
    "server:logs": "pm2 logs xcloud-bot",
    "server:restart": "pm2 restart xcloud-bot",
    "expand:repo": "node scripts/expand-to-repo.js",
    "expand:batch": "node scripts/expand-to-repo.js --batch",
    "multi-repo:list": "node -e \"const {multiRepoManager} = require('./src/config/multi-repo'); console.log(JSON.stringify(multiRepoManager.listRepositories(), null, 2))\"",
    "multi-repo:export": "node -e \"const {multiRepoManager} = require('./src/config/multi-repo'); console.log(JSON.stringify(multiRepoManager.exportConfig(), null, 2))\"",
    "workflow:validate": "find .github/workflows -name '*.yml' -exec yamllint {} \\;",
    "workflow:test": "act --list",
    "workflow:test-issue-mgmt": "node tests/validate-issue-management.js",
    "agent:test": "node scripts/test-autonomous-agent.js",
    "agent:tasks": "curl -s http://localhost:3000/api/agent/tasks | jq",
    "agent:stop": "curl -s -X POST http://localhost:3000/api/agent/stop | jq",
    "agent:simulate": "node -e \"console.log('Usage: npm run agent:simulate -- REPO ISSUE_NUMBER'); process.exit(1)\"",
    "podman:setup": "echo 'Setting up Podman...' && podman --version || echo 'Please install Podman first'",
    "podman:cleanup": "podman stop $(podman ps -q --filter 'name=xbot-') 2>/dev/null || true; podman rm $(podman ps -aq --filter 'name=xbot-') 2>/dev/null || true",
    "debug:assignment": "node scripts/debug-bot-assignment.js",
    "register:github-app": "node scripts/register-github-app.cjs"
  },
  "keywords": [
    "xcloud",
    "github",
    "bot",
    "devops",
    "automation",
    "ai",
    "ci-cd",
    "platform",
    "assistant"
  ],
  "author": "PageCloudv1/xCloud Team",
  "license": "MIT",
  "dependencies": {
    "@octokit/app": "16.1.1",
    "@octokit/rest": "^20.0.2",
    "@octokit/webhooks": "14.1.3",
    "@google/generative-ai": "^0.17.1",
    "@types/node": "^20.0.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "nodemon": "^3.0.2",
    "typescript": "^5.0.0",
    "mongoose": "^8.0.3",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "axios": "^1.6.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "rate-limiter-flexible": "^5.0.3"
  },
  "devDependencies": {
    "@babel/core": "7.28.4",
    "@babel/preset-env": "7.28.3",
    "@playwright/test": "1.55.1",
    "@types/jest": "^29.7.0",
    "@types/js-yaml": "4.0.9",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "babel-jest": "30.2.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "js-yaml": "4.1.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.25.0",
    "vitest": "3.2.4",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PageCloudv1/xcloud-bot.git"
  },
  "bugs": {
    "url": "https://github.com/PageCloudv1/xcloud-bot/issues"
  },
  "homepage": "https://github.com/PageCloudv1/xcloud-bot#readme"
}
