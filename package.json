{
    "name": "xcloud-bot",
    "version": "1.0.0",
    "description": "ðŸ¤– Bot inteligente para automaÃ§Ã£o e gerenciamento da plataforma xCloud",
    "main": "src/bot/github-app.js",
    "type": "module",
    "scripts": {
        "start": "node src/bot/github-app.js",
        "dev": "nodemon src/index.js",
        "build": "npm run build:clean && npm run build:compile",
        "build:clean": "rimraf dist",
        "build:compile": "tsc",
        "build:staging": "NODE_ENV=staging npm run build",
        "build:production": "NODE_ENV=production npm run build",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:unit": "vitest run --config vitest.unit.config.ts",
        "test:integration": "vitest run --config vitest.integration.config.ts",
        "test:e2e": "playwright test",
        "test:coverage": "vitest run --coverage",
        "test:smoke": "vitest run --config vitest.smoke.config.ts",
        "lint": "eslint src/ --ext .js,.ts,.json",
        "lint:fix": "eslint src/ --ext .js,.ts,.json --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "validate": "npm run lint && npm run format:check && npm run type-check",
        "type-check": "tsc --noEmit",
        "deploy": "echo 'Deploy script placeholder'",
        "docs:build": "typedoc src --out docs/api",
        "docs:serve": "http-server docs/api -p 3001",
        "db:setup:test": "echo 'MongoDB test database setup'",
        "db:connect": "node -e \"import('mongoose').then(m => m.default.connect(process.env.DATABASE_URL).then(() => console.log('MongoDB Connected!')))\"",
        "bot:start": "node src/bot/github-app.js",
        "bot:dev": "nodemon src/bot/github-app.js",
        "scheduler:run": "node src/bot/scheduler.js",
        "scheduler:monitor": "node src/bot/scheduler.js --monitor",
        "scheduler:health": "node src/bot/scheduler.js --health",
        "scheduler:cleanup": "node src/bot/scheduler.js --cleanup",
        "webhook:test": "node src/bot/webhook-test.js",
        "analyze:repo": "node -e \"import('./src/workflows/analyzer.js').then(m => m.analyzeRepository(process.argv[1]))\" --",
        "analyze:all": "node -e \"import('./src/workflows/analyzer.js').then(m => m.generateXCloudReport().then(r => console.log(JSON.stringify(r, null, 2))))\"",
        "create:workflow": "node -e \"import('./src/workflows/creator.js').then(m => m.createWorkflowFile(process.argv[1], process.argv[2]))\" --",
        "create:issue": "node -e \"import('./src/workflows/creator.js').then(m => m.createWorkflowImplementationIssue(process.argv[1], process.argv[2]))\" --",
        "prepare": "husky install",
        "semantic-release": "semantic-release"
    },
    "keywords": [
        "xcloud",
        "bot",
        "automation",
        "github-actions",
        "devops",
        "ci-cd"
    ],
    "author": "xCloud Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/PageCloudv1/xcloud-bot.git"
    },
    "bugs": {
        "url": "https://github.com/PageCloudv1/xcloud-bot/issues"
    },
    "homepage": "https://github.com/PageCloudv1/xcloud-bot#readme",
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "dependencies": {
        "@octokit/app": "^16.1.0",
        "@octokit/rest": "^20.0.2",
        "@octokit/webhooks": "^14.1.3",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "mongoose": "^8.0.3",
        "node-cron": "^3.0.3",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
        "@playwright/test": "^1.40.0",
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.0",
        "@types/node-cron": "^3.0.11",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "@vitest/coverage-v8": "^1.0.0",
        "eslint": "^8.54.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-node": "^11.1.0",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "nodemon": "^3.0.2",
        "prettier": "^3.1.0",
        "rimraf": "^5.0.5",
        "semantic-release": "^22.0.0",
        "typedoc": "^0.25.0",
        "typescript": "^5.3.0",
        "vitest": "^1.0.0"
    },
    "lint-staged": {
        "*.{js,ts,json}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{md,yml,yaml}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-push": "npm run validate && npm test"
        }
    }
}
