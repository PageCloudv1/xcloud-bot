# Production Environment Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# GitHub Bot Configuration
GH_APP_ID=your_github_app_id
GH_PRIVATE_KEY_PATH=/opt/xcloud-bot/current/github-private-key.pem
GH_WEBHOOK_SECRET=your_webhook_secret

# Database Configuration (if using MongoDB)
DATABASE_URL=mongodb://localhost:27017/xcloud-bot-prod

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/xcloud-bot/app.log

# Security
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here

# Performance
NODE_OPTIONS="--max-old-space-size=2048"

# Monitoring
HEALTH_CHECK_PORT=3001
METRICS_PORT=3002